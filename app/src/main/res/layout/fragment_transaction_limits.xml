<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransactionLimitsFragment"
    android:background="@color/transparentBlack"
    android:id="@+id/parentCL"
    android:padding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/background">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/interacLimLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interac e-Transfer limit"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"
            android:layout_margin="15dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/InteracLimVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3,000.0 daily | $10,000.0 weekly"
            android:textColor="@color/darkGrey"
            app:layout_constraintTop_toBottomOf="@id/interacLimLbl"
            app:layout_constraintStart_toStartOf="@id/view1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/onlineLimLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online purchase limit"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintStart_toStartOf="@id/view2"
            android:layout_margin="15dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/onlineLimVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$4,000.0 daily | $15,000.0 weekly"
            android:textColor="@color/darkGrey"
            app:layout_constraintTop_toBottomOf="@id/onlineLimLbl"
            app:layout_constraintStart_toStartOf="@id/view2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            />


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/cashbackLimLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashback limit"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            android:layout_margin="15dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/cashbackLimVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2,000.0"
            android:textColor="@color/darkGrey"
            app:layout_constraintTop_toBottomOf="@id/cashbackLimLbl"
            app:layout_constraintStart_toStartOf="@id/view3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>